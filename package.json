{
  "private": true,
  "name": "vue-rollup-boilerplate",
  "version": "1.0.0",
  "description": "A simple boilerplate Vue.js using Rollup",
  "author": "",
  "scripts": {
    "build": "rollup -c",
    "dev": "npm run serve",
    "postinstall": "husky install",
    "serve": "rollup -c -w",
    "size": "npm run build && size-limit",
    "start": "npm run serve"
  },
  "dependencies": {
    "@vue/composition-api": "^1.4.9",
    "vue": "^2.7.0",
    "vue-i18n": "8.26.5",
    "vue-router": "3.5.3",
    "vuex": "^3.6.2"
  },
  "peerDependencies": {
    "postcss": "^8.3.5"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-commonjs": "22.0.2",
    "@rollup/plugin-image": "2.1.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "14.1.0",
    "@rollup/plugin-replace": "4.0.0",
    "@size-limit/preset-app": "8.1.0",
    "cssnano": "5.1.13",
    "esbuild": "0.15.7",
    "generate-source-map": "^0.0.5",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "postcss": "8.4.16",
    "postcss-import": "15.0.0",
    "postcss-nested": "5.0.6",
    "postcss-preset-env": "7.8.2",
    "postcss-sort-media-queries": "4.3.0",
    "prettier": "^2.5.1",
    "prettier-package-json": "2.6.4",
    "rollup": "2.79.0",
    "rollup-plugin-esbuild": "4.10.1",
    "rollup-plugin-filesize": "9.1.2",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-require-context": "^1.0.1",
    "rollup-plugin-serve": "2.0.1",
    "rollup-plugin-visualizer": "5.8.1",
    "rollup-plugin-vue": "^5.1.9",
    "size-limit": "8.1.0",
    "unplugin-vue2-script-setup": "^0.7.3",
    "vue-loader": "17.0.0",
    "vue-template-compiler": "^2.7.2"
  },
  "lint-staged": {
    "*.{js,json,vue},!dist/*.js": [
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "prettier-package-json  --write",
      "git add"
    ]
  },
  "size-limit": [
    {
      "path": "public/assets/app.js"
    }
  ]
}
